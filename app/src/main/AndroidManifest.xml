<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.czu.kit.krejci_soukenik.quizproject" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ViewControllers.QuizMenuActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewControllers.QuizLaunchTestActivity"
            android:configChanges="orientation|screenSize"
            android:label="QuizProject">
        </activity>
        <activity
            android:name=".ViewControllers.QuizTestActivity"
            android:configChanges="orientation|screenSize"
            android:label="QuizProject">
        </activity>
        <activity
            android:label="QuizProject"
            android:configChanges="orientation|screenSize"
            android:name=".ViewControllers.QuizSettingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
