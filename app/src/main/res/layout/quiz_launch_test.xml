<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Test Title"
        android:id="@+id/quiz_title"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:paddingTop="40dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Počet otázek:"
        android:id="@+id/quiz_questions_count"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:layout_alignTop="@+id/quiz_q_count_result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/quiz_q_count_result"
        android:layout_toStartOf="@+id/quiz_q_count_result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x"
        android:id="@+id/quiz_q_count_result"
        android:layout_gravity="right"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:layout_below="@+id/quiz_title"
        android:layout_toEndOf="@+id/quiz_title"
        android:layout_toRightOf="@+id/quiz_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Počet opakování:"
        android:id="@+id/quiz_repeating"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:layout_below="@+id/quiz_questions_count"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/quiz_repeating_result"
        android:layout_toStartOf="@+id/quiz_repeating_result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Úspěšnost:"
        android:id="@+id/quiz_success"
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/quiz_repeating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/quiz_success_result"
        android:layout_toLeftOf="@+id/quiz_success_result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x"
        android:id="@+id/quiz_repeating_result"
        android:layout_gravity="right"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:layout_toEndOf="@+id/quiz_questions_count"
        android:layout_alignTop="@+id/quiz_repeating"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/quiz_questions_count" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x"
        android:id="@+id/quiz_success_result"
        android:layout_gravity="right"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:layout_toEndOf="@+id/quiz_questions_count"
        android:layout_alignTop="@+id/quiz_success"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spustit test"
        android:id="@+id/quiz_launch_button"
        android:paddingBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_alignParentTop="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/resultTextView"
        android:layout_below="@+id/quiz_success"
        android:layout_marginTop="34dp"
        android:layout_alignLeft="@+id/quiz_launch_button"
        android:layout_alignStart="@+id/quiz_launch_button"
        android:layout_alignRight="@+id/quiz_launch_button"
        android:layout_alignEnd="@+id/quiz_launch_button"
        android:textStyle="bold"
        android:textAlignment="center" />
</RelativeLayout>