<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:title="@string/displayResults"
        android:summary="@string/displayInfo"
        android:key="showResults"
        android:defaultValue="Body"
        android:entries="@array/showListArray"
        android:entryValues="@array/showListValues"
        />
    <ListPreference
        android:title="@string/numQ"
        android:summary="@string/setNum"
        android:key="setNumQuestions"
        android:defaultValue="2"
        android:entries="@array/numListArray"
        android:entryValues="@array/numListValues"
        />
</PreferenceScreen>